journal = {Frontiers in Marine Science},
keywords = {Indo-Pacific,algae,climate change,coral reef,coral resilience,herbivory,marine protected areas,parrotfish},
number = {September},
pages = {1--16},
title = {{Can Herbivore Management Increase the Persistence of Indo-Pacific Coral Reefs?}},
