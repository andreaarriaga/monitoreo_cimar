file = {:home/andrea/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Cadotte, Carscadden, Mirotchnick - 2011 - Beyond species Functional diversity and the maintenance of ecological processes and services.pdf:pdf},
issn = {00218901},
journal = {Journal of Applied Ecology},
keywords = {Biodiversity conservation,Community assembly,Ecosystem function,Ecosystem services,Functional diversity,Restoration,Species richness},
number = {5},
pages = {1079--1087},
title = {{Beyond species: Functional diversity and the maintenance of ecological processes and services}},
