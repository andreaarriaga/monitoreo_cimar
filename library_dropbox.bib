doi = {10.1038/s41598-019-45834-4},
file = {:home/andrea/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Carballo et al. - 2019 - Sponge diversity in Eastern Tropical Pacific coral reefs an interoceanic comparison.pdf:pdf},
issn = {20452322},
journal = {Scientific Reports},
number = {1},
pages = {1--15},
title = {{Sponge diversity in Eastern Tropical Pacific coral reefs: an interoceanic comparison}},
volume = {9},
