issn = {00347744},
journal = {Revista de Biologia Tropical},
keywords = {Distance,Exclusive Economic Zone,Management categories,Marine conservation,Marine protected area,Size},
number = {1},
pages = {129--142},
pmid = {22458214},
title = {{Costa Rica's marine protected areas: Status and perspectives}},
volume = {60},
