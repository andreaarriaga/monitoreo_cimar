doi = {10.1002/eap.1981},
file = {:home/andrea/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Bejarano et al. - 2019 - Herbivorous fish rise as a destructive fishing practice falls in an Indonesian marine national park.pdf:pdf},
issn = {19395582},
journal = {Ecological Applications},
keywords = {Indonesia,coral reefs,functional traits,herbivorous fishes,monitoring,muroami fishing,zoning},
number = {8},
title = {{Herbivorous fish rise as a destructive fishing practice falls in an Indonesian marine national park}},
