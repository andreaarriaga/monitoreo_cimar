doi = {10.1002/ecs2.1812},
file = {:home/andrea/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/McClanahan, Muthiga - 2017 - Environmental variability indicates a climate-adaptive center under threat in northern Mozambique coral ree.pdf:pdf},
issn = {21508925},
journal = {Ecosphere},
keywords = {Africa,Climate refugia,Environmental gradients,Fishing impacts,Latitudinal limits},
number = {5},
title = {{Environmental variability indicates a climate-adaptive center under threat in northern Mozambique coral reefs}},
volume = {8},
