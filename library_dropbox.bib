journal = {Scientia Insularum. Revista de Ciencias Naturales en islas},
number = {December},
pages = {63--80},
title = {{REEF ENVIRONMENTS OF MURCI{\'{E}}LAGO ISLANDS AND SANTA ELENA PENINSULA, GUANACASTE CONSERVATION AREA, COSTA RICAN PACIFIC}},
