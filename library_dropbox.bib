keywords = {Camera-based surveys,Climate change,Herbivory,Macroalgae-feeding assay,Overfishing,Resilience},
number = {1},
pages = {53--70},
publisher = {Springer International Publishing},
title = {{Patterns and trends in coral reef macroalgae browsing: a review of browsing herbivorous fishes of the Indo-Pacific}},
