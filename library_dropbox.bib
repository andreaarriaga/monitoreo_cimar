issn = {16000706},
journal = {Oikos},
keywords = {immigration,regional frequency,trait-based community assembly,virtual ecology},
number = {12},
pages = {1735--1745},
title = {{What makes trait–abundance relationships when both environmental filtering and stochastic neutral dynamics are at play?}},
