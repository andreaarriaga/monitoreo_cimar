doi = {10.1098/rspb.2015.2434},
file = {:home/andrea/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Muscarella, Uriarte - 2016 - Do community-weighted mean functional traits reflect optimal strategies.pdf:pdf},
