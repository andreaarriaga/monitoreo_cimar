issn = {10916490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Climate velocity,Coastal tropicalization,Community phase shifts,Global change,Range shifts},
number = {36},
pages = {8990--8995},
pmid = {30126981},
