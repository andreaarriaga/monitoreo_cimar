file = {:home/andrea/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Floeter et al. - 2018 - Phylogenetic perspectives on reef fish functional traits.pdf:pdf},
issn = {1469185X},
journal = {Biological Reviews},
keywords = {body size,coral reef,diversification,evolution,life-history traits,planktivory,range size,reef fish ecology},
number = {1},
pages = {131--151},
pmid = {28464469},
title = {{Phylogenetic perspectives on reef fish functional traits}},
