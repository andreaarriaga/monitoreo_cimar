title = {{Modelaci{\'{o}}n de nicho ecol{\'{o}}gico de especies representativas de la comunidad de mecroinvertebrados de arrecifes rocosos del Golfo de Californio}},
url = {https://cibnor.repositorioinstitucional.mx/jspui/handle/1001/80},
