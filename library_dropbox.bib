issn = {15409309},
journal = {Frontiers in Ecology and the Environment},
number = {8},
pages = {445--454},
title = {{Coral reef ecosystem functioning: eight core processes and the role of biodiversity}},
volume = {17},
year = {2019}
}
@article{Meyer2010,
